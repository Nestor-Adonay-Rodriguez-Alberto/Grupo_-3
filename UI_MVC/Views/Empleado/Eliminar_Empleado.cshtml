@model Transferencia_Datos.Empleado_DTO.Obtener_Empleado

@{
    ViewData["Title"] = "ELIMINAR";
}

<style>
    /* Estilos personalizados */
    .form-container {
        max-width: 450px;
        padding: 20px;
        background-color: #f7f7f7;
        border-radius: 20px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        margin: auto;
        margin-top: 20px;
    }

        .form-container h1 {
            text-align: center;
            font-size: 28px;
            font-weight: bold;
            color: #333;
            text-transform: uppercase;
        }

        .form-container .row {
            margin-bottom: 10px;
        }

        .form-container label {
            font-weight: bold;
        }

</style>

<div class="form-container">
    <h1>Eliminar</h1>

    <div>
        <h5>Datos Del Empleado</h5>
        <hr />

        <!-- Fila #1 -->
        <div class="row">

            <div class="col-sm-4">
                <dt>NOMBRE:</dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Nombre)
                </dd>
            </div>

            <div class="col-sm-4">
                <dt>SUELDO:</dt>
                <dd class="col-sm-10">
                    @Model.Salaraio.ToString("C");
                </dd>
            </div>

            <div class="col-sm-4">
                <dt>ROL:</dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Objeto_Rol.Nombre)
                </dd>
            </div>

        </div>

        <!-- Fila #2 -->
        <div class="row">

            <div class="col-sm-4">
                <dt>TELEFONO:</dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Telefono)
                </dd>
            </div>

            <div class="col-sm-5">
                <dt>EMAIL:</dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Email)
                </dd>
            </div>

        </div>

    </div>

    <!-- BOTONES -->
    <form asp-action="Eliminar_Empleado">
        <input type="hidden" asp-for="IdEmpleado" />
        <input type="submit" value="ELIMINAR" class="btn btn-danger" /> |
        <a asp-action="Empleados_Registrados" class="btn btn-secondary">CANCELAR</a>
    </form>

</div>