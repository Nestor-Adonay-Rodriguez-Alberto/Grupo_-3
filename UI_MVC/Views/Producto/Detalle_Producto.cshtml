@model Transferencia_Datos.Producto_DTO.Obtener_Producto

@{
    ViewData["Title"] = "DETALLE";
}

<style>
    /* Estilos personalizados */
    .form-container {
        max-width: 350px;
        padding: 20px;
        background-color: #f7f7f7;
        border-radius: 20px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        margin: auto;
        margin-top: 20px;
    }

        .form-container h1 {
            text-align: center;
            font-size: 28px;
            font-weight: bold;
            color: #333;
            text-transform: uppercase;
        }

        .form-container .row {
            margin-bottom: 10px;
        }

        .form-container label {
            font-weight: bold;
        }

</style>

<div class="form-container">
    <h1>Detalles</h1>

    <div>
        <h5>Datos Del Producto</h5>
        <hr />

        <!-- Fila #1 -->
        <div class="row">

            <div class="col-sm-7">
                <dt>NOMBRE:</dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Nombre)
                </dd>
            </div>

            <div class="col-sm-5">
                <dt>PRECIO:</dt>
                <dd class="col-sm-10">
                    @Model.Precio.ToString("C");
                </dd>
            </div>

        </div>

        <!-- Fila #2 -->
        <div class="row">

            <div class="col-sm-5">
                <dt>IMAGEN:</dt>
                <dd class="col-sm-10">
                    @{
                        // Es La Imagen En Base64

                        string Imagen_Mostar = "";



                        if (Model.Fotografia != null && Model.Fotografia.Length > 0)

                        {

                            string Cadena_Imagen = Convert.ToBase64String(Model.Fotografia);

                            Imagen_Mostar = "data:image/jpeg;base64," + Cadena_Imagen;

                            <img src="@Imagen_Mostar" style="max-width:100px; max-height:100px" />
                        }

                        else

                        {
                            <img src="~/img/defecto.jpg" style="max-width:100px; max-height:100px" />
                        }
                    }
                </dd>
            </div>
        </div>


    </div>

    <!-- BOTONES -->
    <div>
        <a asp-action="Editar_Producto" asp-route-id="@Model.IdProducto" class="btn btn-primary">EDITAR</a> |
        <a asp-action="Productos_Registrados" class="btn btn-secondary">CANCELAR</a>
    </div>

</div>